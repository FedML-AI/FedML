{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "declaration": true,
    "resolvePackageJsonImports": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.(test|spec).ts"]
}
